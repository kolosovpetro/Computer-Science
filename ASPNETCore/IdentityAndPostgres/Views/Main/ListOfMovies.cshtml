@model IEnumerable<IdentityAndPostgres.ViewModels.MoviesViewModel>

@{
    ViewData["Title"] = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>List of movies in Rental Store</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AgeRestriction)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MovieId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CopiesCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AvailableCopiesCount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Year)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AgeRestriction)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MovieId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CopiesCount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AvailableCopiesCount)
                </td>
                <td>
                    @Html.ActionLink("Details", "MovieDetails", "Main", new { id = item.MovieId }) |
                    @Html.ActionLink("Edit", "EditMovie", "Main", new { id = item.MovieId }) |
                    @Html.ActionLink("Delete", "ConfirmDelete", "Main", new { id = item.MovieId })
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    @Html.ActionLink("To Dashboard", "Index", "Home")
</div>
